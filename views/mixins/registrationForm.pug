mixin registrationForm
  link(rel='stylesheet', href='/stylesheets/registrationForm.css')
  .registrationForm(method='post' action='/api/register')
    .row
      .col-md-12
        .registerErrors
    .row
      .col-md-12
        .input-group
          span#email-icon.input-group-addon
            i.glyphicon.glyphicon-envelope
          input.registerEmail.form-control(name='email', type='text', placeholder='E-Mail', aria-describedby='email-icon')
    .row
      .col-md-12
        .input-group
          span#password-icon.input-group-addon
            i.glyphicon.glyphicon-lock
          input.registerPassword.form-control(name='password', type='password', placeholder='Password', aria-describedby='password-icon')
    .row
      .col-md-12
        .input-group
          span#user-icon.input-group-addon
            i.glyphicon.glyphicon-user
          input.registerFirstName.form-control(name='firstName', type='text', placeholder='First name', aria-describedby='user-icon')
          input.registerLastName.form-control(name='lastName', type='text', placeholder='Last name', aria-describedby='user-icon')

    .row
      .col-md-12
        +buttonWithArrow('Register').registerButton.btn.btn-success.btn-block.btn-lg
    hr
    .row
      .col-md-12
        +registerWithFacebookButton()
