extends layout

append head
  link(rel='stylesheet', href='/stylesheets/navbar.css')
  script(src='/javascripts/app/navbar.js')

block nav
  nav.navbar.navbar-default.navbar-static-top
    div.container-fluid
      div.navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/home') GotIt!
      div#bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li(class=(page == 'home') ? 'active' : '')
            a(href='/home')
              | Home
          li(class=(page == 'park') ? 'active' : '')
            a(href='/park') Park
          li(class=(page == 'sell') ? 'active' : '')
            a(href='/sell') Sell
        ul.nav.navbar-nav.navbar-right
          li(class=(page == 'about') ? 'active' : '')
            a(href='/about') About
          if user && user.id
            li(class=(page == 'profile') ? 'active' : '')
              a(href='/profile')= user.name.first
                |
                |
                i.fa.fa-user
          else
            +loginForm
            li
              button#navbarLogin.btn.navbar-btn.btn-default(data-container='body', data-toggle='popover', data-placement='bottom', data-content='') Log In
              